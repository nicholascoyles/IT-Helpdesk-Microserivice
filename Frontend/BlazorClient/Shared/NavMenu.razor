<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">IT Help Desk Microservice</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>


        <li class="nav-item px-3">
            <NavLink class="nav-link" href="faqlist">
                <span class="oi oi-list-rich" aria-hidden="true"></span> FAQs
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="ticketlist">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Tickets
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="administration">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Admin
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="managefaq">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Manage FAQs
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="managecategories">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Manage Categories
                    </NavLink>
                </li>
            </Authorized>
            </AuthorizeView>
    </ul>
</div>





@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
